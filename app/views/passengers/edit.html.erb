<h1>Update <%= @passenger.name %></h1>
<%=form_tag("/passengers/#{@passenger.id}", method: "patch")%>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Name of passenger:</p>
  <input type="text" name="name" id="name" value=<%= @passenger.name %> ></input>

  <p>Driver: <input type="checkbox" name="driver" id="driver" value=<%= @passenger.driver %> ></input><p>

  <p>Age:</p>
  <input type="number" name="age" id="age" value=<%= @passenger.age %> ></input><br><br>

  <input type="submit" value="Update" id="create"></input>
