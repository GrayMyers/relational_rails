<h1>Update <%= @vehicle.name %></h1>
<form action=<%="/vehicles/#{@vehicle.id}"%> method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Name of vehicle:</p>
  <input type="text" name="name" id="name" value=<%= @vehicle.name %> ></input>

  <p>Locked:<input type="checkbox" name="locked" id="locked" value=<%= @vehicle.locked %> ></input><p>

  <p>Number of seats:</p>
  <input type="number" name="passenger_capacity" id="passenger_capacity" value=<%= @vehicle.passenger_capacity %> ></input><br><br>

  <input type="submit" value="Update" id="create"></input>
<form>
