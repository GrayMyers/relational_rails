<h1>Ships</h1>

<ul>
  <% @ships.recent_at_top.each do |ship| %>
    <li class="ship-<%= ship.id %>">
      <%= ship.name %><br/>
      <%= ship.created_at.strftime("Created on %m/%d/%Y") %>
      <p>Floating: <%= ship.floating %></p>
      <p>Crew Count: <%= ship.crew_count %></p>
    </li>
  <% end %>
</ul>
