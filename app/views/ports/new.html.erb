<%= form_tag '/ports' do %>
  <%= label_tag :name, 'Port Name' %>
  <%= text_field_tag :name %>

  <%= label_tag :dock_count, 'Dock Count' %>
  <%= number_field_tag(:dock_count) %>

  <%= label_tag 'Panamax Capable (Greater than 12.56 meters in depth)' %>
  <%= radio_button_tag :panamax, "true" %>
  <%= label_tag :panamax_true, "True" %>
  <%= radio_button_tag :panamax, "false" %>
  <%= label_tag :panamax_false, "False" %>

  <%= submit_tag 'Create Port' %>
<% end %>
