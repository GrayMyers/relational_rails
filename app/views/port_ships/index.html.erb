<h1>Ships</h1>

<p>Ship Count: <%= @port.ship_count %></p>

<%= link_to 'Sort Ships Alphabetically', "/ports/#{@port.id}/ships?sort_ships_alphabetically=true", method: :get %>

<ul>
  <% @ships.each do |ship| %>
    <li>
      <h3><%= ship.name %></h3>
      <p>Floating: <%= ship.floating %></p>
      <p>Crew Count: <%= ship.crew_count %></p>
    </li>
  <% end %>
</ul>

<%= link_to "Create Ship", "/ports/#{@port.id}/ships/new"  %>
